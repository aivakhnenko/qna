- action_cable ||= false
li id="link-#{link.id}"
  - if link.gist?
    = link.name
    script src="#{link.url}.js"
  - else
    = link_to link.name, link.url
  - if action_cable || current_user&.author_of?(link.linkable)
    .delete-link class=('hidden' if action_cable)
      p= link_to 'Delete link', link_path(link), method: :delete, remote: true